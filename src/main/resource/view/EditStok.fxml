<AnchorPane prefHeight="400.0" prefWidth="380.0" style="-fx-background-color: #f4f7f6;" styleClass="BorderStyle" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditStokController">
    <children>
        <GridPane layoutX="24.0" layoutY="14.0" prefWidth="330.0" vgap="5.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="26.0" AnchorPane.topAnchor="14.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="410.0" /> 
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" /> 
                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> 
            </rowConstraints>
            <children>
                <Label fx:id="lblIdStok" managed="false" visible="false" GridPane.rowIndex="0" />
                
                <HBox alignment="CENTER_LEFT" spacing="2.0" GridPane.rowIndex="1">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Nama Barang" />
                        <Label style="-fx-font-weight: bold; -fx-text-fill: red;" text="*" />
                    </children>
                </HBox>
                <TextField fx:id="txtNamaBarang" promptText="Nama Barang baru" styleClass="search-bar" GridPane.rowIndex="2" />
                
                <HBox alignment="CENTER_LEFT" spacing="2.0" GridPane.rowIndex="3">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Jumlah" />
                        <Label style="-fx-font-weight: bold; -fx-text-fill: red;" text="*" />
                    </children>
                </HBox>
                <TextField fx:id="txtJumlah" promptText="Masukkan Jumlah" styleClass="search-bar" GridPane.rowIndex="4" />
                
                <HBox alignment="CENTER_LEFT" spacing="2.0" GridPane.rowIndex="5">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Satuan" />
                        <Label style="-fx-font-weight: bold; -fx-text-fill: red;" text="*" />
                    </children>
                </HBox>
                <ComboBox fx:id="cbSatuan" prefWidth="410.0" promptText="Pilih Satuan" styleClass="btnFilter" GridPane.rowIndex="6" />
                
                <HBox alignment="CENTER_LEFT" spacing="2.0" GridPane.rowIndex="7">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Keterangan (Opsional)" />
                    </children>
                </HBox>
                <TextArea fx:id="txtKeterangan" prefHeight="50.0" promptText="Informasi tambahan" GridPane.rowIndex="8" />
            </children>
        </GridPane>
        
        <HBox alignment="CENTER_RIGHT" layoutX="179.0" layoutY="330.0" prefHeight="51.0" prefWidth="183.0" spacing="10.0" AnchorPane.bottomAnchor="13.0" AnchorPane.rightAnchor="18.0">
            <children>
                <Button fx:id="btnBatal" mnemonicParsing="false" onAction="#handleBatal" prefHeight="30.0" prefWidth="70.0" style="-fx-cursor: hand;" styleClass="cancel-button" text="Batal" />
                <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdateStok" prefHeight="28.0" prefWidth="70.0" styleClass="btnAdd" text="Simpan" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../css/styleLogin.css" />
        <URL value="@../css/styleTambah.css" />
    </stylesheets>
</AnchorPane>
